@model IdentityTutorial.Tutorial_One.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Yeni Şifre Oluştur</h4>
<hr />

<div class="row offset-4">

    <div class="col-md-4">
        @if (ViewBag.status == "success")
        {
            <div class="alert alert-success">Şifreniz başarıyla yenilenmiştir.</div>
        }
        else { 

            <form asp-action="ResetPasswordConfirm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PasswordNew" class="control-label"></label>
                    <input asp-for="PasswordNew" class="form-control" />
                    <span asp-validation-for="PasswordNew" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Oluştur" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>
